<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBar"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:elevation="2dp"
        android:padding="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:stateListAnimator="@null"
        android:gravity="center_vertical"
        android:text=""
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:iconTint="@color/design_default_color_primary"
        android:icon="@drawable/arrow_back_ios_new_24"
        app:icon="@drawable/arrow_back_ios_new_24"
        app:iconTint="@color/design_default_color_primary"
        app:cornerRadius="16dp"
        app:strokeColor="@color/design_default_color_primary"
        app:strokeWidth="1dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/arrow_back_ios_new_24"
            app:iconTint="@color/design_default_color_primary"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="16dp"
            android:contentDescription="AtrÃ¡s" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnForward"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/arrow_forward_ios_24"
            app:iconTint="@color/design_default_color_primary"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="16dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Adelante" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReload"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/refresh_24"
            app:iconTint="@color/design_default_color_primary"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="16dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Recargar" />
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>