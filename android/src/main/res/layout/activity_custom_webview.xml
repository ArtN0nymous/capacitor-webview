<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/arrow_back_ios_new_24"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="16dp"
            app:iconGravity="start"
            app:iconPadding="0dp"
            android:contentDescription="AtrÃ¡s" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnForward"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/arrow_forward_ios_24"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="16dp"
            app:iconGravity="start"
            app:iconPadding="0dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Adelante" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReload"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/refresh_24"
            android:backgroundTint="@android:color/white"
            app:cornerRadius="16dp"
            app:iconGravity="start"
            app:iconPadding="0dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Recargar" />
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>